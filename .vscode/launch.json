{
    "version": "1.0.0",
    "configurations": [
        {
            "name": "TS-Node",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "ts-node",
            "runtimeArgs": [
                "--transpile-only"
            ],
            "program": "${workspaceRoot}/tools/SocketSend.ts",
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "args": [
                "port",
                "8081",
                "address",
                "127.0.0.1"
            ]
        }
    ]
}